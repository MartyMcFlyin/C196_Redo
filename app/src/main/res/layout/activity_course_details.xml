<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/courseLinearLayout"
        android:layout_width="165dp"
        android:layout_height="627dp"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID" />

        <EditText
            android:id="@+id/courseID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Auto-Generated"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME" />

        <EditText
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Herbology"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START" />

        <EditText
            android:id="@+id/courseStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="11/5/1984"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="118dp" />


        <Switch
            android:id="@+id/startAlertRad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert on start:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END" />

        <EditText
            android:id="@+id/courseEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4/25/1992"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="163dp" />

        <Switch
            android:id="@+id/endAlertRad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert on end:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT STATUS" />


        <Spinner
            android:id="@+id/courseStatus"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="436dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Instructor" />

        <EditText
            android:id="@+id/courseInstruct"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:hint="Professor Sprout"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="118dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor Contact" />

        <EditText
            android:id="@+id/courseContact"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:hint="Email: HHGTTG@42.com Cell: 1-800-867-5309"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="118dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/examsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="160dp"
        android:text="Exams:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/examRecView"
        android:layout_width="196dp"
        android:layout_height="206dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examsTxt" />

    <TextView
        android:id="@+id/courseNotesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="164dp"
        android:text="Notes:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examRecView" />

    <EditText
        android:id="@+id/courseNotes"
        android:layout_width="207dp"
        android:layout_height="213dp"
        android:hint="Don't forget to getter ear plugs for mandrake day next week ~ Neville"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseNotesTxt" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>