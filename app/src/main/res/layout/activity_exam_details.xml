<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="163dp"
        android:layout_height="546dp"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID" />

        <EditText
            android:id="@+id/examID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Auto-Generated"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME" />

        <EditText
            android:id="@+id/examName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trail by Fire"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START" />

        <EditText
            android:id="@+id/examStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="5/4/1976"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="118dp" />


        <Switch
            android:id="@+id/startAlertRad"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Alert for Start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END" />

        <EditText
            android:id="@+id/examEnd"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:hint="5/4/2024"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="163dp" />

        <Switch
            android:id="@+id/endAlertRad"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Alert for End" />

        <TextView
            android:id="@+id/examTypeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assessment Type:" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="94dp" >

            <RadioButton
                android:id="@+id/objBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objective" />

            <RadioButton
                android:id="@+id/perfBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Performance" />
        </RadioGroup>


    </LinearLayout>

    <EditText
        android:id="@+id/examNotes"
        android:layout_width="218dp"
        android:layout_height="303dp"
        android:layout_marginEnd="16dp"
        android:text="There is a theory which states that if ever anyone discovers exactly what the Universe is for and why it is here, it will instantly disappear and be replaced by something even more bizarre and inexplicable.  There is another theory which states that this has already happened."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examNotesTxt" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/examNotesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="192dp"
        android:text="Notes:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>