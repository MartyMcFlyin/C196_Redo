<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID" />

        <EditText
            android:id="@+id/termID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="Auto-Generated"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME" />

        <EditText
            android:id="@+id/termName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Freshman"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START" />

        <EditText
            android:id="@+id/termStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="11/11/2011"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="118dp" />



        <Switch
            android:id="@+id/endAlert"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Alert on start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END" />

        <EditText
            android:id="@+id/termEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="12/25/2099"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="163dp" />

        <Switch
            android:id="@+id/startAlert"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Alert on end" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes:" />


    </LinearLayout>

    <EditText
        android:id="@+id/termNotes"
        android:layout_width="409dp"
        android:layout_height="259dp"
        android:layout_marginStart="1dp"
        android:hint="â€œTo be or not to be, that is the question. What is more worthy action of the mind, to suffer the penetrating shots of unjust fortune, or to oppose the arms of this torrent of calamities, and put an end to them with daring resistance? dying is sleeping, no more? And by a dream, shall we say the afflictions are over and the pains without number, heritage of our weak nature?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/coursesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="173dp"
        android:text="Courses:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courseRecView"
        android:layout_width="219dp"
        android:layout_height="334dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintBottom_toTopOf="@id/termNotes"
        app:layout_constraintLeft_toRightOf="@id/linearLayout" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>